{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

<div class="little-container">
    <div class="div-centre">
        <div class="imageErreur">
            <div class="bulleEtMessage">
                <img src="{{ asset('image/bulle.png') }}" alt="" class="bulle displayNone">
                <div id="divErreur"></div>
            </div>
            <img src="{{ asset('image/instit.png') }}" alt="" class="instit displayNone">
        </div>
        <h1>Mon Compte</h1>
        <div class="displayNone" id="erreurs">
            {{ form_errors(form) }}
        </div>
        {{ form_start(form, {'attr' : {'class' : 'formulaire'}}) }}
        <div class="flex-formulaire">
            {{ form_label(form.pseudo) }}
            {{ form_widget(form.pseudo, {'attr' : {'class':'champs-formulaire'}}) }}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="flex-formulaire">
                {{ form_label(form.roles) }}
                {{ form_widget(form.roles, {'attr' : {'class':'champs-formulaire'}}) }}
            </div>
        {% endif %}
        <div class="flex-formulaire">
            {{ form_label(form.newPassword) }}
            {{ form_widget(form.newPassword, {'attr' : {'class':'champs-formulaire'}}) }}
        </div>
        <div class="flex-formulaire">
            {{ form_label(form.oldPassword) }}
            {{ form_widget(form.oldPassword, {'attr' : {'class':'champs-formulaire'}}) }}
        </div>
        <button class="buttonValider">{{ button_label|default('Mettre Ã  jour') }}</button>
        {{ form_end(form) }}
{#        <a href="{{ path('app_user_index') }}">back to list</a>#}

        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

{% block javascript %}
<script src="{{ asset('js/messages.js') }}"></script>
{% endblock %}