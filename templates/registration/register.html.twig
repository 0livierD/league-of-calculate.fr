{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
        <div class="div-centre">
            <h1 class="h1SansMarge marginBottom2vh">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

            <div class="flex-formulaire">
                {{ form_label(registrationForm.pseudo) }}
                {{ form_widget(registrationForm.pseudo, {'attr' : {'class':'champs-formulaire'}}) }}
            </div>
            <div class="flex-formulaire">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr' : {'class':'champs-formulaire'}}) }}
            </div>
            <div class="flex-formulaire">
                {{ form_label(registrationForm.anneeNaissance) }}
                {{ form_widget(registrationForm.anneeNaissance, {'attr' : {'class':'champs-formulaire'}}) }}
            </div>
            <div class="flex-formulaire">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword, {'attr' : {'class':'champs-formulaire'}}) }}
            </div>
            <div class="mentions">
                {{ form_row(registrationForm.agreeTerms) }}
                <label for="">Accepter les <a href="">mentions l√©gales</a></label>
            </div>
{#            <button type="submit" class="btn button-inscription marginTop4vh">Valider</button>#}
            {{ form_end(registrationForm) }}

        </div>

{% endblock %}
